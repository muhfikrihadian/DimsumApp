<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navBottom" />

    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/navBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_navigation"
        android:elevation="@dimen/_5sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/navHome"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            app:bt_colorActive="@color/ColorWhite"
            app:bt_colorInactive="@color/ColorWhite"
            app:bt_icon="@drawable/ic_baseline_home_24"
            app:bt_shape="@drawable/bg_nav_active"
            app:bt_title="Home" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/navCart"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            app:bt_colorActive="@color/ColorWhite"
            app:bt_colorInactive="@color/ColorWhite"
            app:bt_icon="@drawable/ic_baseline_shopping_cart_24"
            app:bt_shape="@drawable/bg_nav_active"
            app:bt_title="Cart" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/navFavorite"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            app:bt_colorActive="@color/ColorWhite"
            app:bt_colorInactive="@color/ColorWhite"
            app:bt_icon="@drawable/ic_heart"
            app:bt_shape="@drawable/bg_nav_active"
            app:bt_title="Favorite" />

    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>

</RelativeLayout>